<main>
  <!-- Cabecera de usuario -->
  <div class="d-flex justify-content-end align-items-center py-2 px-3">
  {{#if username}}
    <a href="/profile/{{userId}}" class="btn btn-dark ms-3 fw-bold">
  {{nombre}} {{apellido}}
  {{#if role}}<small>(Admin)</small>{{/if}}
</a>
    <a href="/cart" class="btn btn-dark ms-2">Cart</a>
    <a href="/api/sessions/logout" class="btn btn-outline-danger ms-2">Logout</a>
  {{else}}
    <a href="/login" class="btn btn-outline-primary ms-2">Login</a>
    <a href="/register" class="btn btn-outline-dark ms-2">Register</a>
  {{/if}}
</div>

  <!-- Título principal -->
  <div class="text-center mt-4">
    <h1 class="pt-3">Home</h1>
  </div>

  <!-- Listado de productos -->
  <div class="row row-cols-1 row-cols-md-4 g-4 p-5">
    {{#each products}}
      <div class="col mb-4">
        <div class="card h-100 d-flex flex-column shadow-sm">
          <div class="card-body flex-grow-1">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text fw-bold">Precio: ${{this.price}}</p>
            <p class="card-text">Categoría: {{this.category}}</p>
            <p class="card-text">Stock: {{this.stock}}</p>
            <!-- Campo para la cantidad -->
          </div>
          <div class="input-group mb-3 mt-auto px-3">
            <input
              type="number"
              id="quantity-{{this._id}}"
              min="1"
              max="{{this.stock}}"
              value="1"
              class="form-control"
              aria-label="Cantidad"
            />
            <button
              class="btn btn-dark"
              onclick="addToCart('{{this._id}}')"
            >Agregar al carrito</button>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

  <!-- Paginación -->
  <nav aria-label="Page navigation" class="pb-5">
    <ul class="pagination justify-content-center">
      {{#if hasPrevPage}}
        <li class="page-item">
          <a
            class="page-link text-black"
            href="/?numPage={{prevPage}}"
            aria-label="Anterior"
          >
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
      {{/if}}
      <li class="page-item disabled">
        <span class="page-link">{{page}}</span>
      </li>
      {{#if hasNextPage}}
        <li class="page-item">
          <a
            class="page-link text-black"
            href="/?numPage={{nextPage}}"
            aria-label="Siguiente"
          >
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      {{/if}}
    </ul>
  </nav>

<!-- Footer -->
<footer class="bg-dark text-white text-center py-4 mt-5">
  <div class="container">
    <h5 class="mb-3">USUARIO PARA HACER PRUEBAS:</h5>
    <p class="lead mb-1"><strong>Usuario:</strong> admin@gmail.com</p>
    <p class="lead"><strong>Contraseña:</strong> admin</p>
  </div>
</footer>


  <script>
    window.userId = "{{userId}}";
  </script>

</main>

<script src="/js/home.js"></script>