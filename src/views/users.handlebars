<main class="container">
    <div class="d-flex justify-content-end align-items-center pt-2">
        <a href="/" class="btn btn-dark">Volver al Inicio</a>
    </div>
    <div class="text-center">
        <h1 class="py-5">Secci√≥n Usuarios</h1>
        {{#each users}}
            <p>Nombre: {{ this.first_name}} {{this.last_name}}. Correo: {{this.email}}</p>
            <hr>
        {{/each}}
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                {{#if hasPrevPage}}
                    <li class="page-item">
                        <a class="page-link text-black" href="/api/users?numPage={{prevPage}}" aria-label="Anterior">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only"></span>
                        </a>
                    </li>
                {{/if}}
                <li class="page-item disabled">
                    <span class="page-link text-black">{{page}}</span>
                </li>
                {{#if hasNextPage}}
                    <li class="page-item">
                        <a class="page-link text-black" href="/api/users?numPage={{nextPage}}" aria-label="Siguiente">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only"></span>
                        </a>
                    </li>
                {{/if}}
            </ul>
        </nav>
    </div>
<main/>